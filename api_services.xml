<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Base Actions -->
        <service id = "api.get_handler" class="Civi\Api4\Action\GetHandler"/>
        <service id = "api.create_handler" class="Civi\Api4\Action\CreationHandler"/>

        <!-- API Entities -->

        <service abstract="true" id="abstract.api" class="Civi\Api4\AbstractApi">
            <argument type="service" id="api4.kernel"/>
        </service>

        <service id="contact.api" class="Civi\Api4\Api\ContactApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="custom_group.api" class="Civi\Api4\Api\CustomGroupApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="custom_field.api" class="Civi\Api4\Api\CustomFieldApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="activity.api" class="Civi\Api4\Api\ActivityApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="location_type.api" class="Civi\Api4\Api\LocationTypeApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="option_group.api" class="Civi\Api4\Api\OptionGroupApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="option_value.api" class="Civi\Api4\Api\OptionValueApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="tag.api" class="Civi\Api4\Api\TagApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="phone.api" class="Civi\Api4\Api\PhoneApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="entity_tag.api" class="Civi\Api4\Api\EntityTagApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

        <service id="address.api" class="Civi\Api4\Api\AddressApi" parent="abstract.api">
            <tag name="api.standard_entity"/>
        </service>

    </services>

</container>
